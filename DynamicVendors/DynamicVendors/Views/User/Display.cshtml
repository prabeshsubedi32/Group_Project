@model IEnumerable<DynamicVendors.Models.User>

@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

<p>
    @Html.ActionLink("Create New", "createUser","User")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserPassword)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserPassword)
        </td>
        <td>
            @Html.ActionLink("Edit", "updateUser", new { id=item.UserID }) |
            @Html.ActionLink("Details", "displayUser", new { id=item.UserID }) |
            @Html.ActionLink("Delete", "Remove", new { id=item.UserID })
        </td>
    </tr>
}

</table>
